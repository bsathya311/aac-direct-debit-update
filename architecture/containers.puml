@startuml
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

System_Boundary(boundary, "Direct Debit Update Service") {
  Container(api, "REST Controller", "Spring Boot", "Handles HTTP requests")
  Container(service, "Business Logic", "Java Service", "Processes mandate updates")
  Container(client, "TM Client", "Java Client SDK", "Communicates with Thought Machine")
}

System_Ext(thoughtMachine, "Thought Machine")

Rel(api, service, "Calls")
Rel(service, client, "Uses")
Rel(client, thoughtMachine, "Sends direct debit update")
@enduml
